<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow ：底部阴影层-->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#BBB" />

            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- White Top color：顶部层 -->
    <item
        android:bottom="0px"
        android:left="0px"
        android:right="3px"
        android:top="0px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />

            <corners android:radius="0dp" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="15dp"
                android:top="0dp" />



            <!--设置边框 宽度=1px，颜色为skyBluesss-->
            <stroke
                android:width="1px"
                android:color="#5b5d64" />


        </shape>
    </item>

</layer-list>