<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center">

    <ImageView
        android:id="@+id/item_contacts_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/item_contacts_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@drawable/message_delete" />
    <ImageView
        android:id="@+id/unread_lable"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@drawable/shape_red_dot" />
    <RelativeLayout
        android:id="@+id/item_contacts_selected"
        android:layout_width="93dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:visibility="gone">


        <ImageView
            android:id="@+id/item_contacts_selected_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/item_contacts_selected_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_horizontal|bottom"
            android:maxLines="1"
            android:text="昵称"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/item_contacts_selected_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="65dp"
            android:padding="5dp"
            android:src="@drawable/message_delete" />
    </RelativeLayout>
</RelativeLayout>