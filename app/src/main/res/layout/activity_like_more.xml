<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333232"
    tools:context="com.neishenmo.sochat.sochatandroid.view.relation.LikeMoreActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜欢"
            android:textSize="30sp"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y7"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访问"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/y7"
            android:layout_marginLeft="@dimen/x5"
            android:id="@+id/like_more_num"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/like_more_list"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginLeft="@dimen/x5"
        android:layout_weight="2"
        ></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        >
        <Button
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y20"
            android:layout_centerInParent="true"
            android:background="@drawable/shape"
            android:textColor="#ffffff"
            android:text="返回"
            android:id="@+id/like_finish"
            />

    </RelativeLayout>
</LinearLayout>
