<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background">

    <ImageView
        android:id="@+id/iv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_return"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="手机号码注册"
        android:textSize="28sp"
        android:textColor="#ffffff"
        android:layout_marginTop="86dp"/>

    <TextView
        android:id="@+id/tv_phone_erification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_text"
        android:maxEms="8"
        android:textSize="18sp"

        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="38dp"/>

    <EditText
        android:id="@+id/ed_erification_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入短信验证码"
        android:textColorHint="#ffffff"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:maxLength="6"
        android:gravity="center"
        android:layout_below="@+id/tv_phone_erification"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/iv_next_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_next_press"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ed_erification_number"
        android:layout_marginTop="248dp"/>

    <TextView
        android:id="@+id/tv_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新发送"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_next_step"
        android:layout_marginTop="18dp"/>

</RelativeLayout>